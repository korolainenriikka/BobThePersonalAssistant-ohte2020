<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="880.0" prefWidth="650.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bob.PrimarySceneController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fitHeight="300.0" fitWidth="655.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/primarySceneTop.jpg" />
               </image>
            </ImageView>
            <MenuButton mnemonicParsing="false" text="≡">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleSetNewReminderScene" text="lisää muistutus" />
              </items>
            </MenuButton>
         </children>
      </HBox>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <VBox maxWidth="320.0" minHeight="460.0" prefHeight="400.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="MUISTA!"/>
                  <Label fx:id="todaysReminders" text="ei muistettavaa tänään :)"/>
               </children>
            </VBox>
         </center>
      </BorderPane>
      <BorderPane maxHeight="150.0" minHeight="150.0" prefHeight="150.0" prefWidth="200.0">
         <center>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/primarySceneBottom.jpg" />
               </image>
            </ImageView>
         </center>
      </BorderPane>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="880.0" prefWidth="650.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bob.PrimarySceneController">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="topImage" fitHeight="300.0" fitWidth="655.0" pickOnBounds="true" preserveRatio="true" />
                <MenuButton mnemonicParsing="false" text="≡">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleSetNewReminderScene" text="lisää muistutus" />
                        <MenuItem mnemonicParsing="false" onAction="#handleSetNewEventScene" text="lisää kalenteritapahtuma" />
                        <MenuItem mnemonicParsing="false" onAction="#handleSetEndDayScene" text="lopeta päivä" />
                    </items>
                </MenuButton>
            </children>
        </HBox>
        <BorderPane prefHeight="392.0" prefWidth="650.0">
            <center>
                <VBox maxWidth="320.0" minHeight="417.0" prefHeight="417.0" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox fx:id="todaysCalendarItems" />
                    </children>
                </VBox>
            </center>
        </BorderPane>
        <BorderPane maxHeight="175.0" minHeight="150.0" prefHeight="175.0" prefWidth="650.0">
            <center>
                <ImageView fitHeight="162.0" fitWidth="158.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@../images/primarySceneBottom.jpg" />
                    </image>
                </ImageView>
            </center>
        </BorderPane>
    </children>
</VBox>
